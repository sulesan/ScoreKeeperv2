<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#81C784</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#81C784</item>
    </style>

    <!-- This is a style for Football Field Photo for background. -->
    <style name="FootballFieldPhotoTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- This is a style for team name text. -->
    <style name="TeamNameTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- This is a style for team score text. -->
    <style name="TeamScoreTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_2</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- This is a style for red card text. -->
    <style name="RedCardTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#FF3D00</item>
        <item name="android:textSize">@dimen/text_size_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- This is a style for yellow card text. -->
    <style name="YellowCardTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#FFEB3B</item>
        <item name="android:textSize">@dimen/text_size_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- This is a style for goal, red card, yellow card button. -->
    <style name="ButtonTheme1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textSize">@dimen/text_size_3</item>
    </style>

    <!-- This is a style for reset button. -->
    <style name="ButtonTheme2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textSize">@dimen/text_size_3</item>
    </style>


</resources>
